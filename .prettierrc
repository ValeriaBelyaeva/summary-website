{
  "printWidth": 100,          /* максимум 100 символов в строке */
  "tabWidth": 2,              /* шаг отступа — 2 пробела */
  "useTabs": false,           /* только пробелы */
  "semi": true,               /* всегда ставить ; */
  "singleQuote": true,        /* одинарные кавычки вместо двойных */
  "trailingComma": "es5",     /* запятые в последнем элементе для ES5-совместимых структур */
  "bracketSpacing": true,     /* пробелы внутри объектов { a: 1 } */
  "arrowParens": "avoid",     /* без скобок у однопараметрических стрелочных функций */
  "endOfLine": "lf"           /* перевод строки LF — *nix-формат */
}
